<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="dashboardPane" prefHeight="700.0" prefWidth="1200.0" styleClass="dashboard-pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controllers.DashboardController">
   <children>
      <!-- Header -->
      <AnchorPane prefHeight="80.0" prefWidth="1200.0" styleClass="header-pane">
         <children>
            <JFXHamburger fx:id="hamburger" styleClass="hamburger" />
            <Label fx:id="welcomeLabel" layoutX="80.0" layoutY="25.0" styleClass="welcome-label" text="Welcome, Admin!" />
            <Label fx:id="statsLabel" layoutX="80.0" layoutY="50.0" styleClass="stats-label" text="📚 Books: 10 total, 8 available | 👥 Users: 5 | 📖 Active Issues: 2 | ⚠️ Overdue: 0" />
         </children>
      </AnchorPane>
      
      <!-- Main content area -->
      <AnchorPane fx:id="contentPane" layoutY="80.0" prefHeight="620.0" prefWidth="1200.0" styleClass="content-pane">
         <children>
            <!-- Default dashboard content -->
            <VBox alignment="CENTER" spacing="30.0" styleClass="dashboard-content">
               <children>
                  <Label styleClass="dashboard-title" text="Library Management System" />
                  <Label styleClass="dashboard-subtitle" text="Welcome to your modern library dashboard" />
                  
                  <!-- Quick stats cards -->
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card">
                           <children>
                              <Label styleClass="stat-number" text="150" />
                              <Label styleClass="stat-label" text="Total Books" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card">
                           <children>
                              <Label styleClass="stat-number" text="25" />
                              <Label styleClass="stat-label" text="Active Users" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card">
                           <children>
                              <Label styleClass="stat-number" text="45" />
                              <Label styleClass="stat-label" text="Issued Books" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card">
                           <children>
                              <Label styleClass="stat-number" text="3" />
                              <Label styleClass="stat-label" text="Overdue" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Quick actions -->
                  <VBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Label styleClass="section-title" text="Quick Actions" />
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <JFXButton fx:id="booksButton" buttonType="RAISED" prefHeight="50.0" prefWidth="120.0" ripplerFill="#ffffff" styleClass="action-button" text="📚 Books">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </JFXButton>
                              <JFXButton fx:id="transactionsButton" buttonType="RAISED" prefHeight="50.0" prefWidth="120.0" ripplerFill="#ffffff" styleClass="action-button" text="📖 Issues">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </JFXButton>
                              <JFXButton fx:id="usersButton" buttonType="RAISED" prefHeight="50.0" prefWidth="120.0" ripplerFill="#ffffff" styleClass="action-button" text="👥 Users">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </JFXButton>
                              <JFXButton fx:id="reportsButton" buttonType="RAISED" prefHeight="50.0" prefWidth="120.0" ripplerFill="#ffffff" styleClass="action-button" text="📊 Reports">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
      
      <!-- Drawer for navigation -->
      <JFXDrawer fx:id="drawer" defaultDrawerSize="250.0" direction="LEFT" layoutX="0.0" layoutY="80.0" prefHeight="620.0" prefWidth="250.0" styleClass="navigation-drawer" />
   </children>
</AnchorPane>
