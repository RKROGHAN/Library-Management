      </AnchorPane>
      
      <!-- Toolbar -->
      <AnchorPane layoutY="80.0" prefHeight="60.0" prefWidth="950.0" styleClass="toolbar">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <JFXTextField fx:id="searchField" focusColor="#3498db" labelFloat="true" promptText="Search transactions..." styleClass="search-field" unFocusColor="#bdc3c7">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXTextField>
                  
                  <JFXComboBox fx:id="statusFilter" focusColor="#3498db" promptText="Filter by status" styleClass="filter-combo" unFocusColor="#bdc3c7">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXComboBox>
                  
                  <JFXButton fx:id="refreshButton" buttonType="RAISED" prefHeight="35.0" prefWidth="80.0" ripplerFill="#ffffff" styleClass="toolbar-button" text="ðŸ”„ Refresh">
                     <font>
                        <Font name="System Bold" size="12.0" />
