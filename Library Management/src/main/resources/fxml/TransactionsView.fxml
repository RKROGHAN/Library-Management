            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <JFXButton fx:id="issueBookButton" buttonType="RAISED" prefHeight="35.0" prefWidth="120.0" ripplerFill="#ffffff" styleClass="add-button" text="ðŸ“– Issue Book">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXButton>
                  
                  <JFXButton fx:id="returnBookButton" buttonType="RAISED" prefHeight="35.0" prefWidth="120.0" ripplerFill="#ffffff" styleClass="edit-button" text="ðŸ“š Return Book">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXButton>
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
         </children>
      </AnchorPane>
      
      <!-- Transactions table -->
      <AnchorPane layoutY="140.0" prefHeight="480.0" prefWidth="950.0" styleClass="table-container">
         <children>
            <TableView fx:id="transactionsTable" prefHeight="480.0" prefWidth="950.0" styleClass="data-table">
               <columns>
                  <TableColumn fx:id="userNameColumn" prefWidth="150.0" text="User" />
                  <TableColumn fx:id="bookTitleColumn" prefWidth="200.0" text="Book Title" />
                  <TableColumn fx:id="issueDateColumn" prefWidth="120.0" text="Issue Date" />
                  <TableColumn fx:id="dueDateColumn" prefWidth="120.0" text="Due Date" />
                  <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                  <TableColumn fx:id="returnDateColumn" prefWidth="120.0" text="Return Date" />
