<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="usersPane" prefHeight="620.0" prefWidth="950.0" styleClass="books-pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controllers.UsersController">
   <children>
      <!-- Header -->
      <AnchorPane prefHeight="80.0" prefWidth="950.0" styleClass="view-header">
         <children>
            <Label layoutX="20.0" layoutY="20.0" styleClass="view-title" text="👥 Users Management" />
            <Label layoutX="20.0" layoutY="45.0" styleClass="view-subtitle" text="Manage library users and permissions" />
         </children>
      </AnchorPane>
      
      <!-- Toolbar -->
      <AnchorPane layoutY="80.0" prefHeight="60.0" prefWidth="950.0" styleClass="toolbar">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <JFXTextField fx:id="searchField" focusColor="#3498db" labelFloat="true" promptText="Search users..." styleClass="search-field" unFocusColor="#bdc3c7">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXTextField>
                  
                  <JFXButton fx:id="refreshButton" buttonType="RAISED" prefHeight="35.0" prefWidth="80.0" ripplerFill="#ffffff" styleClass="toolbar-button" text="🔄 Refresh">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXButton>
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <JFXButton fx:id="addUserButton" buttonType="RAISED" prefHeight="35.0" prefWidth="100.0" ripplerFill="#ffffff" styleClass="add-button" text="➕ Add User">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXButton>
                  
                  <JFXButton fx:id="editUserButton" buttonType="RAISED" prefHeight="35.0" prefWidth="100.0" ripplerFill="#ffffff" styleClass="edit-button" text="✏️ Edit">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXButton>
                  
                  <JFXButton fx:id="deleteUserButton" buttonType="RAISED" prefHeight="35.0" prefWidth="100.0" ripplerFill="#ffffff" styleClass="delete-button" text="🗑️ Delete">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </JFXButton>
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
         </children>
      </AnchorPane>
      
      <!-- Users table -->
      <AnchorPane layoutY="140.0" prefHeight="480.0" prefWidth="950.0" styleClass="table-container">
         <children>
            <TableView fx:id="usersTable" prefHeight="480.0" prefWidth="950.0" styleClass="data-table">
               <columns>
                  <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="Username" />
                  <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
                  <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Role" />
                  <TableColumn fx:id="phoneColumn" prefWidth="200.0" text="Phone" />
               </columns>
            </TableView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
